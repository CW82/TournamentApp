<table border="1">
    <thead>
        <tr>
            <th>matchID</th>
            <th>tournamentID</th>
            <th>scheduledTime</th>
            <th>winner</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each matches}}
        <tr>
            <td>{{matchID}}</td>
            <td>{{tournamentID}}</td>
            <td>{{scheduledTime}}</td>
            <td>{{winner}}</td>
            <td>
                <div class="delete-button">
                <form action="/matches/delete/{{matchID}}" method="POST" class="delete-button" onsubmit="return confirmDelete('{{matchID}}')">
                    <button type="submit">Delete</button>
                </form>
                </div>
            </td> 
        </tr>
        {{/each}}
    </tbody>
</table>

<form action="/matches/add" method="POST" class="add-form">
    <h3>Add New Team</h3>
    <div class="form-row">
        <input type="number" name="tournamentID" placeholder="tournamentID" required>
        <input type="datetime-local" name="scheduledTime" placeholder="scheduledTime" required>
        <input type="number" name="winner" placeholder="winner" required>
        <button type="submit">Add Match</button>
    </div>
</form>

<script>
function confirmDelete(matchID) {
    return confirm(`Are you sure you want to delete "${matchID}"?`);
}
</script>